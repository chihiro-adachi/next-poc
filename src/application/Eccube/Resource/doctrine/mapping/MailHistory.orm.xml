<?xml version="1.0" encoding="utf-8"?>
<mapping>
  <entity repository-class="Eccube\Repository\MailHistoryRepository" name="Eccube\Entity\MailHistory" table="dtb_mail_history" inheritance-type="SINGLE_TABLE">
    <discriminator-column name="discriminator_type" type="string" length="255"/>
    <discriminator-map>
      <discriminator-mapping value="mailhistory" class="Eccube\Entity\MailHistory"/>
    </discriminator-map>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="send_date" type="datetimetz" column="send_date" nullable="true"/>
    <field name="mail_subject" type="string" column="mail_subject" length="255" nullable="true"/>
    <field name="mail_body" type="text" column="mail_body" nullable="true"/>
    <field name="mail_html_body" type="text" column="mail_html_body" nullable="true"/>
    <many-to-one field="Order" target-entity="Eccube\Entity\Order" inversed-by="MailHistories" fetch="LAZY">
      <join-columns>
        <join-column name="order_id" referenced-column-name="id" nullable="true"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="Creator" target-entity="Eccube\Entity\Member" fetch="LAZY">
      <join-columns>
        <join-column name="creator_id" referenced-column-name="id" nullable="true"/>
      </join-columns>
    </many-to-one>
  </entity>
</mapping>
