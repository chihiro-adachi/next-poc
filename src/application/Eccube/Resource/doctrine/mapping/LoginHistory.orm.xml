<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="Eccube\Repository\LoginHistoryRepository" name="Eccube\Entity\LoginHistory" table="dtb_login_history" inheritance-type="SINGLE_TABLE">
    <discriminator-column name="discriminator_type" type="string" length="255"/>
    <discriminator-map>
      <discriminator-mapping value="loginhistory" class="Eccube\Entity\LoginHistory"/>
    </discriminator-map>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="user_name" type="text" column="user_name" nullable="true"/>
    <field name="client_ip" type="text" column="client_ip" nullable="true"/>
    <field name="create_date" type="datetimetz" column="create_date" nullable="false"/>
    <field name="update_date" type="datetimetz" column="update_date" nullable="false"/>
    <many-to-one field="Status" target-entity="Eccube\Entity\Master\LoginHistoryStatus" fetch="LAZY">
      <join-columns>
        <join-column name="login_history_status_id" referenced-column-name="id" nullable="false"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="LoginUser" target-entity="Eccube\Entity\Member" fetch="LAZY">
      <join-columns>
        <join-column name="member_id" referenced-column-name="id" on-delete="SET NULL" nullable="true"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
