<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="Eccube\Repository\PageRepository" name="Eccube\Entity\Page" table="dtb_page" inheritance-type="SINGLE_TABLE">
    <discriminator-column name="discriminator_type" type="string" length="255"/>
    <discriminator-map>
      <discriminator-mapping value="page" class="Eccube\Entity\Page"/>
    </discriminator-map>
    <indexes>
      <index name="dtb_page_url_idx" columns="url"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="page_name" length="255" nullable="true"/>
    <field name="url" type="string" column="url" length="255" nullable="false"/>
    <field name="file_name" type="string" column="file_name" length="255" nullable="true"/>
    <field name="edit_type" type="smallint" column="edit_type" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="default">1</option>
      </options>
    </field>
    <field name="author" type="string" column="author" length="255" nullable="true"/>
    <field name="description" type="string" column="description" length="255" nullable="true"/>
    <field name="keyword" type="string" column="keyword" length="255" nullable="true"/>
    <field name="create_date" type="datetimetz" column="create_date" nullable="false"/>
    <field name="update_date" type="datetimetz" column="update_date" nullable="false"/>
    <field name="meta_robots" type="string" column="meta_robots" length="255" nullable="true"/>
    <field name="meta_tags" type="string" column="meta_tags" length="4000" nullable="true"/>
    <one-to-many field="PageLayouts" target-entity="Eccube\Entity\PageLayout" mapped-by="Page" fetch="LAZY">
      <cascade>
        <cascade-remove/>
        <cascade-persist/>
      </cascade>
    </one-to-many>
    <many-to-one field="MasterPage" target-entity="Eccube\Entity\Page" fetch="LAZY">
      <join-columns>
        <join-column name="master_page_id" referenced-column-name="id" nullable="true"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
