<?xml version="1.0" encoding="utf-8"?>
<mapping>
  <entity repository-class="Eccube\Repository\CategoryRepository" name="Eccube\Entity\Category" table="dtb_category" inheritance-type="SINGLE_TABLE">
    <discriminator-column name="discriminator_type" type="string" length="255"/>
    <discriminator-map>
      <discriminator-mapping value="category" class="Eccube\Entity\Category"/>
    </discriminator-map>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="category_name" length="255" nullable="false"/>
    <field name="hierarchy" type="integer" column="hierarchy" nullable="false">
      <options>
        <option name="unsigned">1</option>
      </options>
    </field>
    <field name="sort_no" type="integer" column="sort_no" nullable="false"/>
    <field name="create_date" type="datetimetz" column="create_date" nullable="false"/>
    <field name="update_date" type="datetimetz" column="update_date" nullable="false"/>
    <one-to-many field="ProductCategories" target-entity="Eccube\Entity\ProductCategory" mapped-by="Category" fetch="EXTRA_LAZY"/>
    <one-to-many field="Children" target-entity="Eccube\Entity\Category" mapped-by="Parent" fetch="LAZY">
      <order-by>
        <order-by-field name="sort_no" direction="DESC"/>
      </order-by>
    </one-to-many>
    <many-to-one field="Parent" target-entity="Eccube\Entity\Category" inversed-by="Children" fetch="LAZY">
      <join-columns>
        <join-column name="parent_category_id" referenced-column-name="id" nullable="true"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="Creator" target-entity="Eccube\Entity\Member" fetch="LAZY">
      <join-columns>
        <join-column name="creator_id" referenced-column-name="id" nullable="true"/>
      </join-columns>
    </many-to-one>
  </entity>
</mapping>
