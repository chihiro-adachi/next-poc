<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="Eccube\Repository\MemberRepository" name="Eccube\Entity\Member" table="dtb_member" inheritance-type="SINGLE_TABLE">
    <discriminator-column name="discriminator_type" type="string" length="255"/>
    <discriminator-map>
      <discriminator-mapping value="member" class="Eccube\Entity\Member"/>
    </discriminator-map>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="name" length="255" nullable="true"/>
    <field name="department" type="string" column="department" length="255" nullable="true"/>
    <field name="login_id" type="string" column="login_id" length="255" nullable="false"/>
    <field name="password" type="string" column="password" length="255" nullable="false"/>
    <field name="salt" type="string" column="salt" length="255" nullable="true"/>
    <field name="sort_no" type="smallint" column="sort_no" nullable="false">
      <options>
        <option name="unsigned">1</option>
      </options>
    </field>
    <field name="two_factor_auth_key" type="string" column="two_factor_auth_key" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="two_factor_auth_enabled" type="boolean" column="two_factor_auth_enabled" nullable="false">
      <options>
        <option name="default">false</option>
      </options>
    </field>
    <field name="create_date" type="datetimetz" column="create_date" nullable="false"/>
    <field name="update_date" type="datetimetz" column="update_date" nullable="false"/>
    <field name="login_date" type="datetimetz" column="login_date" nullable="true"/>
    <many-to-one field="Work" target-entity="Eccube\Entity\Master\Work" fetch="LAZY">
      <join-columns>
        <join-column name="work_id" referenced-column-name="id" nullable="true"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="Authority" target-entity="Eccube\Entity\Master\Authority" fetch="LAZY">
      <join-columns>
        <join-column name="authority_id" referenced-column-name="id" nullable="true"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="Creator" target-entity="Eccube\Entity\Member" fetch="LAZY">
      <join-columns>
        <join-column name="creator_id" referenced-column-name="id" nullable="true"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
