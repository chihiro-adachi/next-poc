<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="Eccube\Repository\ProductTagRepository" name="Eccube\Entity\ProductTag" table="dtb_product_tag" inheritance-type="SINGLE_TABLE">
    <discriminator-column name="discriminator_type" type="string" length="255"/>
    <discriminator-map>
      <discriminator-mapping value="producttag" class="Eccube\Entity\ProductTag"/>
    </discriminator-map>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="create_date" type="datetimetz" column="create_date" nullable="false"/>
    <many-to-one field="Product" target-entity="Eccube\Entity\Product" inversed-by="ProductTag" fetch="LAZY">
      <join-columns>
        <join-column name="product_id" referenced-column-name="id" nullable="true"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="Tag" target-entity="Eccube\Entity\Tag" inversed-by="ProductTag" fetch="LAZY">
      <join-columns>
        <join-column name="tag_id" referenced-column-name="id" nullable="true"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="Creator" target-entity="Eccube\Entity\Member" fetch="LAZY">
      <join-columns>
        <join-column name="creator_id" referenced-column-name="id" nullable="true"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
