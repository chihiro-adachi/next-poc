<?xml version="1.0" encoding="utf-8"?>
<mapping>
  <entity repository-class="Eccube\Repository\TagRepository" name="Eccube\Entity\Tag" table="dtb_tag" inheritance-type="SINGLE_TABLE">
    <discriminator-column name="discriminator_type" type="string" length="255"/>
    <discriminator-map>
      <discriminator-mapping value="tag" class="Eccube\Entity\Tag"/>
    </discriminator-map>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="name" length="255" nullable="false"/>
    <field name="sort_no" type="smallint" column="sort_no" nullable="false">
      <options>
        <option name="unsigned">1</option>
      </options>
    </field>
    <one-to-many field="ProductTag" target-entity="Eccube\Entity\ProductTag" mapped-by="Tag" fetch="LAZY"/>
  </entity>
</mapping>
