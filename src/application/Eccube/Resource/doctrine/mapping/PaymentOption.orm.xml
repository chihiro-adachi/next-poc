<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="Eccube\Repository\PaymentOptionRepository" name="Eccube\Entity\PaymentOption" table="dtb_payment_option" inheritance-type="SINGLE_TABLE">
    <discriminator-column name="discriminator_type" type="string" length="255"/>
    <discriminator-map>
      <discriminator-mapping value="paymentoption" class="Eccube\Entity\PaymentOption"/>
    </discriminator-map>
    <id name="delivery_id" type="integer" column="delivery_id"/>
    <id name="payment_id" type="integer" column="payment_id"/>
    <many-to-one field="Delivery" target-entity="Eccube\Entity\Delivery" inversed-by="PaymentOptions" fetch="LAZY">
      <join-columns>
        <join-column name="delivery_id" referenced-column-name="id" nullable="true"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="Payment" target-entity="Eccube\Entity\Payment" inversed-by="PaymentOptions" fetch="LAZY">
      <join-columns>
        <join-column name="payment_id" referenced-column-name="id" nullable="true"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
