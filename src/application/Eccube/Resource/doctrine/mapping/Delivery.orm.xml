<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="Eccube\Repository\DeliveryRepository" name="Eccube\Entity\Delivery" table="dtb_delivery" inheritance-type="SINGLE_TABLE">
    <discriminator-column name="discriminator_type" type="string" length="255"/>
    <discriminator-map>
      <discriminator-mapping value="delivery" class="Eccube\Entity\Delivery"/>
    </discriminator-map>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="name" length="255" nullable="true"/>
    <field name="service_name" type="string" column="service_name" length="255" nullable="true"/>
    <field name="description" type="string" column="description" length="4000" nullable="true"/>
    <field name="confirm_url" type="string" column="confirm_url" length="4000" nullable="true"/>
    <field name="sort_no" type="integer" column="sort_no" nullable="true">
      <options>
        <option name="unsigned">1</option>
      </options>
    </field>
    <field name="visible" type="boolean" column="visible" nullable="false">
      <options>
        <option name="default">1</option>
      </options>
    </field>
    <field name="create_date" type="datetimetz" column="create_date" nullable="false"/>
    <field name="update_date" type="datetimetz" column="update_date" nullable="false"/>
    <one-to-many field="PaymentOptions" target-entity="Eccube\Entity\PaymentOption" mapped-by="Delivery" fetch="LAZY">
      <cascade>
        <cascade-remove/>
        <cascade-persist/>
      </cascade>
    </one-to-many>
    <one-to-many field="DeliveryFees" target-entity="Eccube\Entity\DeliveryFee" mapped-by="Delivery" fetch="LAZY">
      <cascade>
        <cascade-remove/>
        <cascade-persist/>
      </cascade>
    </one-to-many>
    <one-to-many field="DeliveryTimes" target-entity="Eccube\Entity\DeliveryTime" mapped-by="Delivery" fetch="LAZY">
      <cascade>
        <cascade-remove/>
        <cascade-persist/>
      </cascade>
      <order-by>
        <order-by-field name="sort_no" direction="ASC"/>
      </order-by>
    </one-to-many>
    <many-to-one field="Creator" target-entity="Eccube\Entity\Member" fetch="LAZY">
      <join-columns>
        <join-column name="creator_id" referenced-column-name="id" nullable="true"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="SaleType" target-entity="Eccube\Entity\Master\SaleType" fetch="LAZY">
      <join-columns>
        <join-column name="sale_type_id" referenced-column-name="id" nullable="true"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
