<?xml version="1.0" encoding="utf-8"?>
<mapping>
  <entity repository-class="Eccube\Repository\CartItemRepository" name="Eccube\Entity\CartItem" table="dtb_cart_item" inheritance-type="SINGLE_TABLE">
    <discriminator-column name="discriminator_type" type="string" length="255"/>
    <discriminator-map>
      <discriminator-mapping value="cartitem" class="Eccube\Entity\CartItem"/>
    </discriminator-map>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="price" type="decimal" column="price" precision="12" scale="2" nullable="false">
      <options>
        <option name="default">0</option>
      </options>
    </field>
    <field name="quantity" type="decimal" column="quantity" precision="10" scale="0" nullable="false">
      <options>
        <option name="default">0</option>
      </options>
    </field>
    <field name="point_rate" type="decimal" column="point_rate" precision="10" scale="0" nullable="true">
      <options>
        <option name="unsigned">1</option>
      </options>
    </field>
    <many-to-one field="ProductClass" target-entity="Eccube\Entity\ProductClass" fetch="LAZY">
      <join-columns>
        <join-column name="product_class_id" referenced-column-name="id" nullable="true"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="Cart" target-entity="Eccube\Entity\Cart" inversed-by="CartItems" fetch="LAZY">
      <cascade>
        <cascade-persist/>
      </cascade>
      <join-columns>
        <join-column name="cart_id" referenced-column-name="id" on-delete="CASCADE" nullable="true"/>
      </join-columns>
    </many-to-one>
  </entity>
</mapping>
