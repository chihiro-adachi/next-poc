<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="Eccube\Repository\PaymentRepository" name="Eccube\Entity\Payment" table="dtb_payment" inheritance-type="SINGLE_TABLE">
    <discriminator-column name="discriminator_type" type="string" length="255"/>
    <discriminator-map>
      <discriminator-mapping value="payment" class="Eccube\Entity\Payment"/>
    </discriminator-map>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="method" type="string" column="payment_method" length="255" nullable="true"/>
    <field name="charge" type="decimal" column="charge" precision="12" scale="2" nullable="true">
      <options>
        <option name="unsigned">1</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="rule_max" type="decimal" column="rule_max" precision="12" scale="2" nullable="true">
      <options>
        <option name="unsigned">1</option>
      </options>
    </field>
    <field name="sort_no" type="smallint" column="sort_no" nullable="true">
      <options>
        <option name="unsigned">1</option>
      </options>
    </field>
    <field name="fixed" type="boolean" column="fixed" nullable="false">
      <options>
        <option name="default">1</option>
      </options>
    </field>
    <field name="payment_image" type="string" column="payment_image" length="255" nullable="true"/>
    <field name="rule_min" type="decimal" column="rule_min" precision="12" scale="2" nullable="true">
      <options>
        <option name="unsigned">1</option>
      </options>
    </field>
    <field name="method_class" type="string" column="method_class" length="255" nullable="true"/>
    <field name="visible" type="boolean" column="visible" nullable="false">
      <options>
        <option name="default">1</option>
      </options>
    </field>
    <field name="create_date" type="datetimetz" column="create_date" nullable="false"/>
    <field name="update_date" type="datetimetz" column="update_date" nullable="false"/>
    <one-to-many field="PaymentOptions" target-entity="Eccube\Entity\PaymentOption" mapped-by="Payment" fetch="LAZY"/>
    <many-to-one field="Creator" target-entity="Eccube\Entity\Member" fetch="LAZY">
      <join-columns>
        <join-column name="creator_id" referenced-column-name="id" nullable="true"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
